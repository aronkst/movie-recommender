<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>

<% @movies.each do |movie| %>
  <div class="card bg-neutral text-neutral-content mb-2">
    <div class="card-body items-center text-center">
      <h2 class="card-title"><%= movie[:title] %></h2>
      <p><%= movie[:year] %></p>
      <p><%= movie[:imdb] %></p>
      <p><%= movie[:url_cover] %></p>
      <%= render get_state(@states, movie[:imdb]) %>
    </div>
  </div>
<% end %>