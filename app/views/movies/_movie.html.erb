<div class="card bg-base-100 shadow-xl">
  <figure class="px-10 pt-10">
    <%= image_tag movie.cover.variant(:final), alt: movie.imdb %>
  </figure>
  <div class="card-body">
    <h2 class="card-title"><%= movie.title %></h2>
    <p><%= movie.year %></p>
    <p><%= movie.summary %></p>
    <p><%= movie.genres.join(', ') %></p>
    <div>
      <div title="Score" class="badge badge-primary mt-2 mr-2">
        <%= movie.score %>
      </div>
      <div title="Amount Of Votes" class="badge badge-secondary mt-2 mr-2">
        <%= number_to_human(movie.amount_of_votes) %>
      </div>
      <% if movie.metascore.present? %>
        <div title="Metascore" class="badge badge-accent mt-2 mr-2">
          <%= movie.metascore %>
        </div>
      <% end %>
      <div title="Points" class="badge mt-2">
        <%= number_to_human(movie.points) %>
      </div>
    </div>
    <div>
      <%= render partial: "states/state", locals: { state: movie.state || State.new(imdb: movie.imdb), from_search: false } %>
      <a class="mt-5 btn btn-warning btn-xs" href="https://www.imdb.com/title/<%= movie[:imdb] %>" target="_blank">See on IMDb</a>
    </div>
  </div>
</div>