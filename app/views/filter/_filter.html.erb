<form class="mt-5" method="GET" id="filter-form" action="<%= route %>">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="<%= class_fields.present? ? class_fields : "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3" %>">
        <%= yield %>
      </div>
      <div class="self-end mt-5">
        <button type="submit" class="btn btn-primary">
          Search
        </button>
      </div>
    </div>
  </div>
</form>